// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

model Message {
  id            Int      @id @default(autoincrement())
  referenceId   String
  userId        String
  groupId       String
  groupType     Int      @default(1)
  groupName     String?
  groupImageUrl String?
  messageType   Int      @default(1)
  createdFor    String[]
  readBy        Json[]
  content       String?
  createdAt     DateTime @default(now())
  timestamp     String?
  status        Int      @default(1)
}

model Group {
  id         Int      @id @default(autoincrement())
  groupId    String
  ownerId    String
  name       String
  displayUrl String
  type       Int      @default(1)
  createdAt  String
  status     Int      @default(1)
  members    String[]
}

datasource db {
  provider = "postgresql"
  url      = env("NEXT_PUBLIC_DATABASE_URL")
}
