// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

model Message {
  id          Int      @id @default(autoincrement())
  messageId   String
  ownerId     String
  groupId     String
  messageType Int      @default(1)
  readBy      String[]
  content     String
  createdAt   String
  status      Int      @default(1)
}

model Group {
  id         Int    @id @default(autoincrement())
  groupId    String
  ownerId    String
  name       String
  displayUrl String
  type       Int    @default(1)
  createdAt  String
  status     Int    @default(1)
}

datasource db {
  provider = "postgresql"
  url      = env("NEXT_PUBLIC_DATABASE_URL")
}
